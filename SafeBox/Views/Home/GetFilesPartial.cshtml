@model List<EntityLayer.Concrete.StorageFileInfo>

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">

                <div class="card" style="margin-bottom:2rem;">
                    <div class="text-center rounded " style="height:15rem; background-color:white; ">
                        <a href="@item.LocalDownloadUrl" target="_blank" >
                            <div class="row h-100  " style="height:15rem;" >
                                <div class="col-12 my-auto">
                                    @if (item.Extension == "text/plain")
                                    {<img class="img-fluid" src="~/images/textIcon.png" alt="Card image cap" style="max-height:100%; max-width:100%">
                                    }
                                    else if (item.Extension.Contains("image"))
                                    {
                                        <img class="img-fluid" src="@item.LocalDownloadUrl" alt="Card image cap" style="max-height:100%; max-width:100%">
                                    }
                                    else if (item.Extension.Contains("word"))
                                    {
                                        <img class="img-fluid" src="~/images/msword.png" alt="Card image cap" style="max-height: 100%; max-width: 100%; width: 35%;">
                                    }
                                    else if (item.Extension.Contains("video"))
                                    {
                                        <img class="img-fluid  " src="~/images/film.png" alt="Card image cap" style="max-height: 100%; max-width: 100%; width: 35%;">
                                    }
                                    else if (item.Extension.Contains("application/pdf"))
                                    {
                                        <img class="img-fluid " src="~/images/pdf.png" alt="Card image cap" style="max-height: 100%; max-width: 100%; width: 35%;">
                                    }
                                    else if (item.Extension.Contains("rar"))
                                    {
                                        <img class="img-fluid " src="~/images/rar.png" alt="Card image cap" style="max-height: 100%; max-width: 100%; width: 35%;">
                                    }
                                    else 
                                    {
                                        <img class="img-fluid " src="~/images/unknowed.png" alt="Card image cap" style="max-height: 100%; max-width: 100%; width: 35%;">
                                    }
                                </div>
                            </div>
                        </a>
                        </div>
                    <div class="card-body text-center bg-light">

                        <a href="@item.LocalDownloadUrl" target="_blank" style="color:darkslategrey">
                            <h6 class="card-title" style="height:3rem">@item.Name</h6>
                        </a>
                        <div class="row col-12 p-0" style="position:absolute; bottom:0px;">

                            <a class="col-6 btn" href="/Home/DeleteFile?fileName=@item.Name">
                                <i class="fas fa-trash-alt"></i>
                            </a>


                            <div class="col-6 btn">
                                <a href=" @item.LocalDownloadUrl ">
                                    <i class="fas fa-download"></i>
                                </a>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
        }
    </div>
}
else
{
    <h5 style="color:red;">There is no file...</h5>
}
