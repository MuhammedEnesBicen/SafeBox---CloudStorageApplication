@model List<EntityLayer.Concrete.StorageFileInfo>
@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/css/Home.css" rel="stylesheet" />


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<style>
    li :hover {
        background-color: beige;
    }
</style>
<body>
    <header>
        <nav class="container-fluid shadow">
            <div class="row mb-1 border-bottom p-1 " style="align-items:center;">
                <div class="col-md-3"><img class="img-fluid px-1" src="~/images/logo.svg" style="height:2rem;" /><span style="font-size:2rem; vertical-align:middle;  color:dodgerblue">SafeBox</span></div>
                <div class="col-md-6">
                    <div class="search">
                        <i class="fas fa-search"></i><input type="text" class="form-control" placeholder="Search in your SafeBox..."> <button class="btn btn-outline-primary">Search</button>
                    </div>
                </div>

                <div class="col-md-3 d-flex p-0">
                    <div class="row d-flex justify-content-end col-md-12">
                        <div class="profil">
                            <big class="px-3"><i class="fas fa-cog"></i></big>
                            <big>  <big><i style="color:red" class="fas fa-user-circle"></i></big></big>

                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid">
        <div class="row g-0">

            <div class="col-2 border vh-100 p-0" style="background-color:white">
                @*<btn id="addBtn">ekle</btn>*@
                <div id="addBtn" class="badge badge-pill badge-light ">
                    <i class="fas fa-plus"></i>
                    <span>New</span>
                </div>

                <div>
                    <ul class="list p-0 g-0" style="">
                        <li class="border" style="width:100%; height:100%;">

                            <span><i class="fa fa-trash mr-3" aria-hidden="true"></i>SafeBox</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-10">
                <div class="container">
                    <div class="border ">
                        <form asp-controller="Home" asp-action="UploadFile" method="post"
                              enctype="multipart/form-data">

                            <input class="" type="file" name="file" />
                            <button class="btn btn-outline-success float-right" type="submit">Upload File</button>
                        </form>
                    </div>

                    <!-- File presentation area-->
                    <div class="container container-fluid bg-light">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-4 col-sm-6">
                                    @if (item.Extension == "text/plain")
                                    {
                                        <div class="card" style="margin-bottom:2rem;">
                                            <div class="text-center rounded " style="height:15rem; background-color:white; ">
                                                <a href="@item.DownloadUrl" target="_blank"><img class="img-fluid" src="~/images/textIcon.png" alt="Card image cap" style="max-height:100%; max-width:100%"></a>
                                            </div>
                                            <div class="card-body text-center bg-danger">

                                                <a href="@item.DownloadUrl" target="_blank" style="color:darkslategrey">
                                                    <h6 class="card-title" style="height:3rem">@item.Name</h6>
                                                </a>

                                            </div>
                                        </div>
                                    }
                                    else if (item.Extension.Contains("image"))
                                    {
                                        <div class="card" style="margin-bottom:2rem;">
                                            <div class="text-center rounded " style="height:15rem; background-color:white; ">
                                                <a href="@item.DownloadUrl" target="_blank"><img class="img-fluid" src="@item.DownloadUrl" alt="Card image cap" style="max-height:100%; max-width:100%"></a>
                                            </div>
                                            <div class="card-body text-center bg-danger">

                                                <a href="@item.DownloadUrl" target="_blank" style="color:darkslategrey">
                                                    <h6 class="card-title" style="height:3rem">@item.Name</h6>
                                                </a>
                                                <div class="row col-12" style="position:absolute; bottom:0px;">
                                                    <div class="col-6">
                                                        <a href="/Home/DeleteFile?fileName=@item.Name">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </a>
                                                    </div>

                                                    <div class="col-6">
                                                        <i class="fas fa-download"></i>
                                                    </div>
                                                    
                                                </div>

                                            </div>
                                        </div>
                                    }

                                </div>
                            }
                        </div>
                    </div>


                    @*<div>
                            <i class="fas fa-folder-open"></i>
                            <i class="fas fa-folder"></i>
                        </div>*@

                </div>
            </div>

        </div>




    </main>






</body>
</html>


