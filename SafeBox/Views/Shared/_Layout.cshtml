<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SafeBox</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    <link href="~/lib/font-awesome/css/fontawesome.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="container-fluid shadow">
            <div class="row mb-5 border-bottom p-3 " style="align-items:center;">
                <div class="col-md-3"><a  href="#" style="text-align:end; ">Download the app</a></div>
                <div class="col-md-6  text-center "><img class="img-fluid" src="~/images/google.png" style="height:2rem;" /><span style="font-size:2rem; vertical-align:middle;  color:blue">SafeBox</span></div>
                <div class="col-md-3 d-flex" >
                    <div class="row d-flex justify-content-end col-md-12">
                        <a  href="/Login/Index/" >Login</a>
                        <span class="px-1">/</span>
                        <a  href="/Register/Index/" >Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - SafeBox - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
