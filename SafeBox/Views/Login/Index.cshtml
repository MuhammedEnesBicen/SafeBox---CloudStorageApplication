@model EntityLayer.Concrete.User
@{
    ViewData["Title"] = "Index";
}

<style>
    .login {
        background-size: 16px 16px;
        background-repeat: no-repeat;
        background-position: left 10px center;
        background-image: src(~/wwwroot/images/google.png);
        background-color: #1a73e8;
    }
</style>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/font-awesome/css/fontawesome.css" rel="stylesheet" />

<div class="login"></div>
<div class="row">
    <div class="col-md-6">
        <img class="img-fluid" src="~/images/SafeBox.jpg" />
    </div>
    <div class="col-md-6">
        <div class="col-md-8">
            <div style="margin:1rem 0;">
                <span >Sign In</span> 
                <span class="float-right">or <a style="color: #0061ff;" href="/Register/Index/">create an account</a></span>
            </div>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <form action="#" method="post">

                    <div class="form-group">
                        <input id="ggllogin" type="button" class="form-control btn-sm" value="Sign in with Google" style="background-color: #0070e0; color:white">
                    </div>
                    <div class="form-group">
                        <input id="apllogin" type="button" class="form-control btn-sm" value="Sign in with Apple" style="background-color: #000; color:white">
                    </div>
                    <p class="text-center dont-do mt-3">(Or)</p>

                    
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @placeholder = "email", @required = "", @type = "email" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", @placeholder = "password", @required = "" })
                    </div>
                    <p style="color:red"> @ViewBag.message </p>
                    <div class="col-6 float-right">
                        <input id="submitlogin" type="submit" class="form-control" value="Log in" style="background: #0070e0; color: white">
                    </div>
                    <div class="sub-w3l">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            <input type="checkbox" class="custom-control-input" id="customControlAutosizing">
                            <label class="custom-control-label" for="customControlAutosizing">Remember me?</label>
                        </div>
                    </div>

                    @*<i class="fab fa-google-plus-g"></i>*@
                </form>
            }

        </div>
    </div>
</div>